<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <EditText
        android:id="@+id/etPeso"
        android:layout_width="78dp"
        android:layout_height="33dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:singleLine="true"
        tools:layout_editor_absoluteX="218dp"
        tools:layout_editor_absoluteY="162dp" />

    <Button
        android:id="@+id/calcula"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:text="CALCULAR TMB"
        android:textSize="30sp"
        android:onClick="fazerAParadaAcontecer"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="428dp" />

    <TextView
        android:id="@+id/altura"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:layout_marginStart="44dp"
        android:text="TextView"
        android:textSize="25sp"
        app:layout_constraintBottom_toTopOf="@+id/peso"
        app:layout_constraintStart_toStartOf="parent"
        tools:text="@string/altura" />

    <TextView
        android:id="@+id/peso"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="44dp"
        android:textSize="25sp"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="162dp"
        tools:text="@string/peso" />

    <TextView
        android:id="@+id/idade"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="44dp"
        android:text="TextView"
        android:textSize="25sp"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="220dp"
        tools:text="@string/idade" />

    <android.support.design.widget.TextInputLayout
        android:id="@+id/textInputLayout"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="6dp">

    </android.support.design.widget.TextInputLayout>

    <EditText
        android:id="@+id/etAltura"
        android:layout_width="77dp"
        android:layout_height="33dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:singleLine="true"
        tools:layout_editor_absoluteX="229dp"
        tools:layout_editor_absoluteY="104dp" />

    <EditText
        android:id="@+id/etIdade"
        android:layout_width="78dp"
        android:layout_height="34dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:singleLine="true"
        tools:layout_editor_absoluteX="229dp"
        tools:layout_editor_absoluteY="220dp" />

    <RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/radioGroupMF"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="329dp">

        <RadioButton
            android:id="@+id/botaoMasculino"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="52dp"
            android:layout_marginStart="8dp"
            android:text="@string/masculino"
            android:textSize="25sp"
            app:layout_constraintEnd_toStartOf="@+id/botaoFeminino"
            app:layout_constraintHorizontal_bias="0.8"
            app:layout_constraintStart_toStartOf="parent"
            tools:layout_editor_absoluteY="342dp" />

        <RadioButton
            android:id="@+id/botaoFeminino"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            android:checked="false"
            android:text="@string/feminino"
            android:textSize="25sp"
            app:layout_constraintEnd_toEndOf="parent"
            tools:layout_editor_absoluteY="342dp" />
    </RadioGroup>
    <TextView
        android:id="@+id/sexo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="44dp"
        android:layout_marginTop="24dp"
        android:text="@string/sexo"
        android:textSize="25sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/idade" />

    <TextView
        android:id="@+id/calculadora"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:text="TextView"
        android:textSize="34sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="34dp"
        tools:text="@string/calcladora" />

    <TextView
        android:id="@+id/cm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        tools:layout_editor_absoluteX="306dp"
        tools:layout_editor_absoluteY="119dp"
        tools:text="@string/cm" />

    <TextView
        android:id="@+id/kg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        tools:layout_editor_absoluteX="296dp"
        tools:layout_editor_absoluteY="176dp"
        tools:text="@string/kg" />

    <TextView
        android:id="@+id/anos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/anos"
        tools:layout_editor_absoluteX="306dp"
        tools:layout_editor_absoluteY="235dp" />

    <TextView
        android:id="@+id/tvTmb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textSize="30sp"
        android:visibility="invisible"
        tools:layout_editor_absoluteX="51dp"
        tools:layout_editor_absoluteY="510dp"
        tools:text="TMB:" />



</android.support.constraint.ConstraintLayout>